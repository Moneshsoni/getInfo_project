<%= form_with model: detail do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
  </div>

  <div>
    <%= form.label :refference %><br>
    <%= form.text_area :refference %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>